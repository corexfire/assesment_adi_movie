<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popular_cardView"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/popular_thumb_image"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/ic_movie_beginning"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_movie_beginning"
            />
        <TextView
            android:id="@+id/popular_thumb_title"
            android:text="Title"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:maxLines="2"
            android:layout_marginTop="2dp"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_calendar"
            />
        <TextView
            android:id="@+id/popular_thumb_releaseDate"
            android:text="2020/01/01"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_star_filled"
                />
            <TextView
                android:id="@+id/popular_rating"
                android:text="9.9"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>